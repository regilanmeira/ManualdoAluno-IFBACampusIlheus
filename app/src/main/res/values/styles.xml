<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="LayoutLinear" parent="AppTheme">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:orientation">vertical</item>

    </style>

    <style name="TextView_DestaqueListView" parent="ThemeOverlay.AppCompat.Light">
    <item name="android:textColor">@color/colorPrimary</item>
    <item name="android:layout_margin">@dimen/margem_entre_elementos</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:textSize">26dp</item>
    </style>

    <style name="TextView_DestaquePequenoListView" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">8dp</item>
        <item name="android:gravity">left</item>

    </style>


    <style name="TextView_PadraoListView" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">#666666</item>
        <item name="android:layout_margin">@dimen/margem_entre_elementos</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">14dp</item>

    </style>



    <style name="TextView_Titulo" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">#EEEEEE</item>
        <item name="android:layout_margin">@dimen/margem_entre_elementos</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textAllCaps">true</item>


    </style>

    <style name="ListView_Padrao" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:layout_margin">@dimen/margem_entre_elementos</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="TextView_Ano_DataListView" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">#999999</item>
        <item name="android:layout_marginLeft">@dimen/margem_entre_elementos</item>

        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">10dp</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
    </style>

    <style name="TextView_DataListViewTitulo" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">#999999</item>
        <item name="android:layout_margin">@dimen/margem_entre_elementos</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">12dp</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
    </style>

    <style name="TextView_Padrao" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_margin">@dimen/margem_entre_elementos</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="Botao_Padrao" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_margin">@dimen/margem_entre_elementos</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>

    </style>

    <style name="EditText_Padrao" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_margin">@dimen/margem_entre_elementos</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>

    </style>

    <style name="DatePicker_Padrao" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:layout_margin">@dimen/margem_entre_elementos</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:datePickerMode">spinner</item>
        <item name="android:calendarViewShown">false</item>
        <item name="android:spinnersShown">true</item>
    </style>

    <style name="TextView_DataListView" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">#999999</item>
        <item name="android:layout_margin">@dimen/margem_entre_elementos</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">10dp</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
    </style>

</resources>
